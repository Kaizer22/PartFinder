<resources>
    <!-- Base application theme. -->
    <style name="Theme.PartFinder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_20</item>
        <item name="colorOnPrimary">@color/primary_40</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_20</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="linkColor">@color/primary_40</item>

        <!-- Custom attributes. -->
        <item name="buttonPrimaryColor">@color/primary</item>
        <item name="buttonPrimaryColorLight">@color/primary_20</item>
        <item name="buttonSecondaryColor">@color/secondary</item>
        <item name="buttonSecondaryColorLight">@color/secondary_20</item>
        <item name="buttonPrimaryTextColor">@color/black</item>
    </style>
    
    <style name="PartFinderSplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_40</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>
</resources>