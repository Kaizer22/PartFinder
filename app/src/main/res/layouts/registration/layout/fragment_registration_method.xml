<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="@string/registration_method_title"
        android:textAppearance="@style/TextAppearance.PartFinder.H5Header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        android:gravity="center"
        android:text="@string/registration_method_info"
        android:textAppearance="@style/TextAppearance.PartFinder.Body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/registration_method_button_phone"
        style="@style/ButtonSecondaryColor"
        android:gravity="center"
        android:paddingStart="32dp"
        android:paddingEnd="64dp"
        app:icon="@drawable/ic_phone"
        app:iconSize="32dp"
        app:iconTint="?attr/buttonPrimaryTextColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="24dp"
        android:text="@string/button_registration_by_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/registration_method_button_email"
        style="@style/ButtonTertiaryColor"
        app:icon="@drawable/ic_baseline_email"
        android:paddingStart="32dp"
        android:paddingEnd="64dp"
        app:iconGravity="start"
        app:iconSize="32dp"
        app:iconTint="?attr/buttonPrimaryTextColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="@string/registration_method_by_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registration_method_button_phone" />
</androidx.constraintlayout.widget.ConstraintLayout>